//- @pugdoc
    name: copyright
    arguments:
        - {array} params.elClasses
    examples:
        - |
            include ~Components/copyright/m-copyright
        - |
            +formMessage({
                elClasses: []
            })

mixin copyright (params)
    div(class=`copyright` + (params.elClasses ? ` ${params.elClasses.join(' ')}` : ``))
        span.copyright__name © Владимир Астахов
        span.copyright__company Создано с любовью в LoftSchool
        span.copyright__year 2016
