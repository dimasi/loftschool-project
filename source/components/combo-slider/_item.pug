//- @pugdoc
    name: comboSliderItem
    arguments:
        - {string}      params.link
        - {string}      params.githubLink
        - {string}      params.image
        - {string}      params.title
        - {array}       params.techs
    examples:
        - |
            include ~Components/combo-slider/_item
        - |
            +comboSliderItem({
                link: '',
                githubLink: '',
                image: '',
                title: '',
                techs: []
            })


mixin comboSliderItem (params)
    li.slider-data__item(data-link=params.link data-github-link=params.githubLink || false)
        img(src=params.image class=`slider-data__img`)
        h4.slider-data__title= params.title
        ul.slider-data__techs
            each tech in params.techs
                li.slider-data__tech= tech
