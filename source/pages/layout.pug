doctype html
html
    head
        meta(charset=`utf-8`)
        meta(name=`viewport`, content="initial-scale=1.0, width=device-width")
        link(href=`https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i&amp;subset=cyrillic` rel=`stylesheet`)
        title
            block title
    body
        include ../components/preloader/preloader

        .page
            button(type=`button` class=`menu__toggler page__hamburger hamburger`)
                span.hamburger__wrapper
                    span.hamburger__inner

            +social({
                className: `page__social social_xs-size_small`,
                items: [
                    {
                        id: `vk`,
                        link: `#vk`
                    },
                    {
                        id: `github`,
                        link: `#github`
                    },
                    {
                        id: `in`,
                        link: `#in`
                    }
                ]
            })

            .page__content
                block content

            .page__footer
                include ../components/footer/footer

        block bottom
